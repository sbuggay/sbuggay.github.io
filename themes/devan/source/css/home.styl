#home
  p
    margin: 1em 0 1em

#latest
  display: flex
  flex-wrap: wrap
  
  .component
    flex: 0 50%
    @media mq-mobile
      flex: 0 100%

ul
  margin: 1em 0 1em
  li
    list-style: circle
    a
      color: color-link 
      &:hover
        text-decoration: none
      span
        &:hover
          text-decoration: underline
    .info
      color: color-orange
      font-size: .9em