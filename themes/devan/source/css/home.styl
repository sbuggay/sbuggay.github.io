#home

  display: flex
  flex-wrap: wrap
  flex-direction: column-reverse

  h1
    line-height: 1.4

  p
    margin: 1em 0 1em
    color: color-subdued
    line-height: 1.7

  hr
    margin-bottom: 20px
    border: none
    height: 1px
    background-color: color-border


  @media mq-normal
      flex-direction: row

  #latest
    display: flex


#left
  width 100%;
  @media mq-normal
    width: 66%

#right
  color: color-subdued

  img 
    margin: 0 auto;
    border-radius: 50%;
    width: 150px;
    display: block;

  width 100%;
  box-sizing: border-box;
  @media mq-normal
    margin-top: 0;
    padding: 10px;
    width: 33%

.container
  display: flex

.component
  margin: 0 0 0 0
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  @media mq-normal
    margin: 0 10px 0 0
  a
    flex-grow: 1;
    flex-basis: 40px;
    .description
      color: darken(color-default, 25)
    background-color: color-background-alt
    border-radius: 3px
    padding: 4px 8px
    margin: 5px 0;
    display: block
    color: color-default
    transition: all .2s ease
    text-decoration: none
    box-shadow: 0 8px 6px -6px black;
 
    time
      color: color-orange
      font-size: .9em
  .tag
      color: color-orange
      font-size: .8em
      border: 1px solid black;
      border-radius: 5px;
      background-color: #333;
      padding: 4px 8px;
